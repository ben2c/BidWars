<h1><%= @item.title %></h1>
<h2>Posted by: <%= @item.user.username %></h2>

<div><%= @item.description %></div>

<p><%= link_to 'See all comments', item_comments_path(@item) %>
<p><%= link_to 'Add a new comment', new_item_comment_path(@item) %>

<h3>Comments</h3><br>
<% @item.comments.each do |c| %>
    <li><strong><%= c.user.username %></strong> commented "<%= link_to c.content, comment_path(c)%>" </li>
<% end %>